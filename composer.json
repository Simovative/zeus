{
  "name": "simovative/zeus",
  "description": "A Post-Redirect-Get specialised framework for PHP",
  "keywords": [
    "framework"
  ],
  "homepage": "https://github.com/Simovative-gmbh/zeus",
  "license": "MIT",
  "authors": [
    {
      "name": "Benedikt Schaller",
      "email": "benedikt.schaller@simovative.com"
    },
    {
      "name": "Markus NÃ¶renberg",
      "email": "markus.noerenberg@simovative.com"
    },
    {
      "name": "Sebastian Hartmann",
      "email": "sebastian.hartmann@simovative.com"
    }
  ],
  "type": "library",
  "autoload": {
    "classmap": [
      "src/",
      "skeleton/bundles",
      "tests/"
    ]
  },
  "require": {
    "ext-intl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": ">=6.0.0, <7.0.0",
    "php": ">=7.1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "smarty/smarty": "v3.* || 4.*",
    "symfony/debug": "<5.0.0",
    "symfony/console": "<5.0.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "suggest": {
    "ext-fileinfo": "Better recognition for file mime types in the file system classes.",
    "ext-libxml": "For BootstrapFormValidation",
    "ext-dom": "For BootstrapFormValidation"
  },
  "bin": [
    "bin/zeus"
  ],
  "archive": {
    "exclude": [
      "!vendor",
      "tests"
    ]
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    }
  }
}
