{
  "name": "simovative/zeus",
  "description": "A Post-Redirect-Get specialised framework for PHP",
  "keywords": [
    "framework"
  ],
  "homepage": "https://github.com/Simovative-gmbh/zeus",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^7.4",
    "ext-intl": "*",
    "ext-json": "*",
    "fig/http-message-util": "^1.1",
    "guzzlehttp/guzzle": "^6.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "smarty/smarty": "^3.1",
    "symfony/debug": "^4.0",
    "symfony/console": "^5.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "bin": [
    "bin/zeus"
  ],
  "suggest": {
    "ext-fileinfo": "Better recognition for file mime types in the file system classes.",
    "ext-libxml": "For BootstrapFormValidation",
    "ext-dom": "For BootstrapFormValidation"
  },
  "config": {
    "process-timeout": 600,
    "preferred-install": {
      "*": "dist"
    },
    "platform": {
      "php": "7.4"
    },
    "use-include-path": true,
    "sort-packages": true,
    "github-protocols": [
      "https"
    ],
    "allow-plugins": {
      "phpro/grumphp": true,
      "phpstan/phpstan": true,
      "phpstan/extension-installer": true
    }
  },
  "archive": {
    "exclude": [
      "!vendor",
      "tests"
    ]
  }
}
